*
  margin: 0
  padding: 0

.input__arrow
  width 21px
  height 21px
  &--down
    border-bottom 1.3px solid #52aa93

.input__arrow img
  width 21px
  height 21px
  cursor pointer

.page__main
  width 100vw
  min-height 100vh
  display flex
  align-items center
  background-color aliceblue
  justify-content center

.input__container
  width 330px
  height 45px
  justify-content: space-around
  background-color white
  border-radius 3px
  box-shadow 0 1px 5px rgba(1,1,1, 0.2)
  display flex

.input__number
  width 290px
  padding 0 7px
  border 0
  font-size 21px
  outline white
  background-color white

.input__arrows
  display flex
  flex-direction column
  justify-content center